<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/migh"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/Header"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/logo2" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_panel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/Header"
        tools:layout_editor_absoluteX="25dp">


        <Button
            android:id="@+id/home_about"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_login_button"
            android:text="About Us"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/login_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/home_contact"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_button"
            android:text="Contact Us"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/login_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/home_insert"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_button"
            android:text="Insert Images"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/login_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:fontFamily="@font/aladin"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/login_panel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-45dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>